<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardFragment">

    <TextView
        android:id="@+id/add_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="#2196F3"
        android:foregroundTint="#FFFFFF"
        android:text="Upload GiftCard"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_header_tv">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_card_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDE3E2"
            android:fontFamily="monospace"
            android:hint="card name:" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_amount_et"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_card_value_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDE3E2"
            android:fontFamily="monospace"
            android:hint="Card Value:" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_exp_date_et"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_amount_et">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_exp_date_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDE3E2"
            android:fontFamily="monospace"
            android:hint="Expiration Date:" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Asking Value:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_exp_date_et">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_asking_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDE3E2"
            android:fontFamily="monospace" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/add_take_picture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:fontFamily="monospace"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/add_camera_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.881"
        tools:text="Take a picture of your card" />

    <ImageButton
        android:id="@+id/add_camera_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintStart_toEndOf="@+id/add_take_picture_tv"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    <ImageView
        android:id="@+id/add_card_giftcard_iv"
        android:layout_width="83dp"
        android:layout_height="69dp"
        android:src="@drawable/giftcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_header_tv"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/add_upload_bt"
        android:layout_width="157dp"
        android:layout_height="66dp"
        android:background="@color/purple_500"
        android:fontFamily="monospace"
        android:text="Upload"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_take_picture_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>