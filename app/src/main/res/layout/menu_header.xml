<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pink_dark_bg">


    <TextView
        android:id="@+id/menu_header_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="user name"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_num_like_tv" />

    <TextView
        android:id="@+id/menu_header_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="user mail"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_header_name_tv" />

    <View
        android:id="@+id/menu_header_list_line"
        style="@style/line"
        android:layout_width="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@color/red_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_header_image_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/avatar"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/header_verification_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/menu_header_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/menu_header_image_iv"
        app:srcCompat="@drawable/head_vi_icon" />

    <ImageView
        android:id="@+id/nnnnn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_num_like_tv"
        app:layout_constraintEnd_toStartOf="@+id/header_num_unlike_tv"
        app:layout_constraintTop_toTopOf="@+id/header_num_like_tv"
        app:srcCompat="@drawable/like_icon_green" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_num_unlike_tv"
        app:layout_constraintEnd_toEndOf="@+id/menu_header_image_iv"
        app:layout_constraintTop_toTopOf="@+id/header_num_unlike_tv"
        app:srcCompat="@drawable/unlike_icon_red" />

    <TextView
        android:id="@+id/header_num_unlike_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/header_num_like_tv" />

    <TextView
        android:id="@+id/header_num_like_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/nnnnn"
        app:layout_constraintTop_toBottomOf="@+id/menu_header_image_iv" />

    <TextView
        android:id="@+id/header_coins_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/header_coins_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_coins_tv"
        app:srcCompat="@drawable/coin_0" />

</androidx.constraintlayout.widget.ConstraintLayout>