<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="32dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    app:cardBackgroundColor="#DDFFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

        <ImageView
            android:id="@+id/my_card_row_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="-30dp"
            android:layout_marginBottom="-10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/amazon_giftcard" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="-145dp"
            android:layout_marginTop="-100dp"
            android:layout_marginEnd="-70dp"
            android:layout_marginBottom="-100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/background" />

        <TextView
            android:id="@+id/my_card_row_amount_in_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00.00"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv111"
            app:layout_constraintStart_toEndOf="@+id/tv111"
            app:layout_constraintTop_toTopOf="@+id/tv111" />

        <TextView
            android:id="@+id/tv111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Holds :"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView191"
            app:layout_constraintTop_toBottomOf="@+id/textView191" />

        <TextView
            android:id="@+id/my_card_tv_buyAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Buy now :"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv111"
            app:layout_constraintTop_toBottomOf="@+id/my_card_row_first_price_text_tv" />

        <TextView
            android:id="@+id/my_card_row_calculated_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0.0"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/my_card_tv_buyAt"
            app:layout_constraintStart_toEndOf="@+id/my_card_tv_buyAt"
            app:layout_constraintTop_toTopOf="@+id/my_card_tv_buyAt" />

        <TextView
            android:id="@+id/textView191"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Exp :"
            app:layout_constraintStart_toStartOf="@+id/my_card_row_type_tv"
            app:layout_constraintTop_toBottomOf="@+id/my_card_row_type_tv" />

        <TextView
            android:id="@+id/my_card_row_exp_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00/00/00"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView191"
            app:layout_constraintStart_toEndOf="@+id/textView191"
            app:layout_constraintTop_toTopOf="@+id/textView191" />

        <TextView
            android:id="@+id/my_card_row_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="CARD TYPE"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Saving :"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/my_card_tv_buyAt"
            app:layout_constraintTop_toBottomOf="@+id/my_card_tv_buyAt" />

        <TextView
            android:id="@+id/my_card_row_saving_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00 %"
            android:textStyle="bold"
            android:textColor="@color/green_saving"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/textView20" />

        <TextView
            android:id="@+id/my_card_row_first_price_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Asked Price :"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv111" />

        <View
            android:id="@+id/my_card_row_line"
            style="@style/line"
            android:layout_width="0dp"
            android:layout_marginBottom="8dp"
            android:background="#6E6C6C"
            app:layout_constraintBottom_toBottomOf="@+id/my_card_row_first_price_tv"
            app:layout_constraintEnd_toEndOf="@+id/my_card_row_first_price_tv"
            app:layout_constraintStart_toStartOf="@+id/my_card_row_first_price_tv"
            app:layout_constraintTop_toTopOf="@+id/my_card_row_first_price_tv" />

        <TextView
            android:id="@+id/my_card_row_first_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00.00"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/my_card_row_first_price_text_tv"
            app:layout_constraintStart_toEndOf="@+id/my_card_row_first_price_text_tv"
            app:layout_constraintTop_toTopOf="@+id/my_card_row_first_price_text_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>