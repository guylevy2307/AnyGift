<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/pink_dark_bg">

    <TextView
        android:id="@+id/splash_title_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Any"
        android:textColor="@color/grey_1"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/splash_title_4_tv"
        app:layout_constraintStart_toStartOf="@+id/splash_title_4_tv" />

    <TextView
        android:id="@+id/splash_title_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:textColor="@color/pink"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textAllCaps="true"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/splash_title_1_tv"
        app:layout_constraintStart_toEndOf="@+id/splash_title_1_tv"
        app:layout_constraintTop_toTopOf="@+id/splash_title_1_tv" />

    <TextView
        android:id="@+id/splash_title_3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ift"
        android:textColor="@color/grey_1"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/splash_title_2_tv"
        app:layout_constraintStart_toEndOf="@+id/splash_title_2_tv"
        app:layout_constraintTop_toTopOf="@+id/splash_title_2_tv" />

    <TextView
        android:id="@+id/splash_title_4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gift Cards Market"
        android:textColor="@color/grey_1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/splash_footer_1_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splash_footer_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="from"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/splash_footer_2_tv"
        app:layout_constraintEnd_toEndOf="@+id/splash_footer_2_tv"
        app:layout_constraintStart_toStartOf="@+id/splash_footer_2_tv" />

    <TextView
        android:id="@+id/splash_footer_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="M^TL"
        android:textColor="@color/grey_1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>