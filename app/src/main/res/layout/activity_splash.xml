<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-580dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/giftbg" />

    <TextView
        android:id="@+id/splash_title_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="200dp"
        android:text="Any"
        android:textColor="@color/grey_1"
        android:textSize="54sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/splash_title_4_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splash_title_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:textColor="#311042"
        android:textSize="54sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/splash_title_1_tv"
        app:layout_constraintStart_toEndOf="@+id/splash_title_1_tv"
        app:layout_constraintTop_toTopOf="@+id/splash_title_1_tv" />

    <TextView
        android:id="@+id/splash_title_3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ift"
        android:textColor="@color/grey_1"
        android:textSize="54sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/splash_title_2_tv"
        app:layout_constraintStart_toEndOf="@+id/splash_title_2_tv"
        app:layout_constraintTop_toTopOf="@+id/splash_title_2_tv" />

    <TextView
        android:id="@+id/splash_title_4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gift cards sharing comunity"
        android:textColor="#8dca7f"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_title_1_tv" />

    <TextView
        android:id="@+id/splash_footer_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="from"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/splash_footer_2_tv"
        app:layout_constraintEnd_toEndOf="@+id/splash_footer_2_tv"
        app:layout_constraintStart_toStartOf="@+id/splash_footer_2_tv" />

    <TextView
        android:id="@+id/splash_footer_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="M^TL"
        android:textColor="@color/purple_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>