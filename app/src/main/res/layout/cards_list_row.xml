<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    android:clickable="true"
    app:cardBackgroundColor="#DDFFFFFF"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <TextView
            android:id="@+id/cards_list_row_et_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/listRow_tv_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/listRow_tv_value"
            app:layout_constraintTop_toTopOf="@+id/listRow_tv_value" />

        <ImageView
            android:id="@+id/cards_list_row_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/giftcard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/listRow_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Value :"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/cards_list_row_iv"
            app:layout_constraintTop_toTopOf="@+id/cards_list_row_iv" />

        <TextView
            android:id="@+id/listRow_tv_buyAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Buy now :"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/cards_list_row_iv"
            app:layout_constraintStart_toEndOf="@+id/cards_list_row_iv"
            app:layout_constraintTop_toBottomOf="@+id/listRow_tv_value" />

        <TextView
            android:id="@+id/cards_list_row_et_buyAt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="125"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/listRow_tv_buyAt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/listRow_tv_buyAt"
            app:layout_constraintTop_toTopOf="@+id/listRow_tv_buyAt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>