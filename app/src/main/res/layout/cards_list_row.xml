<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    app:cardBackgroundColor="#DDFFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:outlineAmbientShadowColor="@color/grey_1"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

        <ImageView
            android:id="@+id/cards_list_row_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="-20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/amazon_giftcard" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="-145dp"
            android:layout_marginTop="-100dp"
            android:layout_marginEnd="-70dp"
            android:layout_marginBottom="-100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/background" />

        <TextView
            android:id="@+id/cards_list_row_amount_in_card_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00.00"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/listRow_tv_value"
            app:layout_constraintStart_toEndOf="@+id/listRow_tv_value"
            app:layout_constraintTop_toTopOf="@+id/listRow_tv_value" />

        <TextView
            android:id="@+id/listRow_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Holds :"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/listRow_tv_buyAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Buy now :"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/listRow_tv_value"
            app:layout_constraintTop_toBottomOf="@+id/listRow_tv_value" />

        <TextView
            android:id="@+id/cards_list_row_price_now_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0.0"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/listRow_tv_buyAt"
            app:layout_constraintStart_toEndOf="@+id/listRow_tv_buyAt"
            app:layout_constraintTop_toTopOf="@+id/listRow_tv_buyAt" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Exp :"
            app:layout_constraintStart_toStartOf="@+id/cards_list_row_type_tv"
            app:layout_constraintTop_toBottomOf="@+id/cards_list_row_type_tv" />

        <TextView
            android:id="@+id/cards_list_row_exp_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00/00/00"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <TextView
            android:id="@+id/cards_list_row_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="CARD TYPE"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>