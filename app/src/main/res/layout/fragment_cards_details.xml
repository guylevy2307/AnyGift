<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsDetailsFragment">

    <ImageView
        android:id="@+id/details_picture_iv"
        android:layout_width="238dp"
        android:layout_height="135dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details_username_tv"
        android:layout_width="234dp"
        android:layout_height="33dp"
        android:text="name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:id="@+id/details_giftvalue_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="200$"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/details_value_tv"
        app:layout_constraintTop_toBottomOf="@+id/details_username_tv" />

    <TextView
        android:id="@+id/details_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="Value:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_username_tv" />

    <ImageView
        android:id="@+id/details_giftpic_iv"
        android:layout_width="214dp"
        android:layout_height="172dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/giftcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_username_tv" />

    <TextView
        android:id="@+id/details_buyat_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="Buy At:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_value_tv" />

    <TextView
        android:id="@+id/details_buyatval_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:text="180$"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/details_buyat_tv"
        app:layout_constraintTop_toBottomOf="@+id/details_giftvalue_tv" />

    <Button
        android:id="@+id/details_delete_btn"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_marginStart="157dp"
        android:layout_marginEnd="167dp"
        android:background="#FF9800"
        android:text="Delete"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardDetails_mapBtn" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="117dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="Belong to:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_picture_iv" />

    <Button
        android:id="@+id/cardDetails_mapBtn"
        android:layout_width="132dp"
        android:layout_height="52dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="178dp"
        android:shadowColor="#039BE5"
        android:text="Buyer Address"
        android:textColor="#9F4242"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_giftpic_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>